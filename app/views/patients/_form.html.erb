<h1>New Patient Form</h1><br>

 <%= form_for(@patient) do |f| %>
   <% if @patient.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient_history from being saved:</h2>
 
       <ul>
       <% @patient.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
      </ul>
    </div>
  <% end %>
  
  <table style="width:1000px">
    <tr>
      <td> Last Name: <%= f.text_field :last_name %></td>
      <td> First name: <%= f.text_field :first_name %></td>
      <td> Middle Intitial: <%= f.text_field :middle_initial,:class=>"input-mysize", :maxlength=>1 %></td>
    </tr>
  </table>
  <hr />
  <table style="width:1000px">
    <tr>
      <td> Email: <%= f.text_field :email %></td>
      <td> Marital Status: <%= f.text_field  :marital_status %></td>
      <td> DOB: <%= f.text_field :dob %></td>
    </tr/>
  </table>
  <hr />
  <table style="width:1000px">
   <tr>
      <td> Height: <%= f.number_field :height, :class=> "input-mysize", :maxlength=>4 %></td>
      <td> Weight: <%= f.number_field :weight, :class=> "input-mysize", :maxlength=>4 %></td>
      <td> Gender: ( M / F ) <%= f.text_field :gender, :class=> "input-mysize", :maxlength=>1 %></td>
      <td> SSN: <%= f.number_field :ssn, :class=>"center", :maxlength=>9 %></td>
   </tr>
  </table>
  <hr />
