     <td align="center" style= "text-align:center"><%= ff.number_field :drinks_per_day, :id=>"alcohol_chg", :class=> "input-mysize", :maxlength=>2  %></td>
     <td align="center" style= "text-align:center"><%= ff.number_field :years_been_drinking, :id=>"alcohol_chg", :class=> "input-mysize", :maxlength=>2 %></td>
   </tr>
   <tr>
     <th class= "center"><%= ff.label :smoking, "Do you smoke?"  %></th>
     <th class= "center"><%= ff.label :packs_per_day, "How many packs per day?"  %></th>
     <th class= "center"><%= ff.label :years_been_smoking, "How many years have you been smoking?"  %></th>
  </tr>
   <tr>
     <td valign= "top" style= "text-align:center"><%= ff.check_box :smoking %></td>
     <td align="center" style= "text-align:center"><%= ff.number_field :packs_per_day, :class=> "input-mysize", :maxlength=>1 %></td>
     <td align="center" style= "text-align:center"><%= ff.number_field :years_been_smoking, :class=> "input-mysize", :maxlength=>2 %></td>
  </tr>
